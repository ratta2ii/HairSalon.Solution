@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet</h3>
}

<table class="redTable">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Specialty</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="3">
        <div class="links"><a href="#">&laquo;</a> <a class="active" href="#">1</a> <a href="#">2</a> <a href="#">3</a> <a href="#">4</a> <a href="#">&raquo;</a></div>
      </td>
    </tr>
  </tfoot>
  <tbody>
    @foreach (Stylist stylist in @Model)
    {
      <tr>
        <td>@stylist.StylistId</td>
        <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
        <td>@stylist.Specialty</td>
      </tr>
    }
  </tbody>
</table>    

<p>@Html.ActionLink("Add new Stylist", "Create")</p>





